{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        
        "declaration": true,
        "declarationMap": true,
        
        "sourceMap": true,
        "composite": true,
        
        "strict": true,
        "esModuleInterop": true,
        
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"]
}