{
    "compilerOptions": {
        /* Basic Options */
        "target": "es2018",
        "module": "commonjs",
        "lib": ["ESNext"],
        
        /* Strict Type-Checking Options */
        "strict": true,
        
        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        
        /* Advanced Options */
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}